model user {
    id              String        @id @default(uuid())
    name            String
    email           String        @unique
    phone           String
    password        String
    role            userRole      @default(TRAVELER)
    profilePhoto    String?
    bio             String?
    language        String[]
    isBlocked       Boolean       @default(false)
    guideProfile    guideProfile?
    createdAt       DateTime      @default(now())
    updateAt        DateTime      @updatedAt
    guideBookings   Booking[]     @relation("GuideBookings")
    touristBookings Booking[]     @relation("TouristBookings")
    guideReview     Review[]      @relation("guideId")
    travelerReview  Review[]      @relation("travelerId")
}

model guideProfile {
    id              String      @id @default(uuid())
    userId          String      @unique
    location        String?
    pricePerDay     Int?
    isAvailable     Boolean     @default(true)
    experienceYears Int?        @default(0)
    guideSpots      GuideSpot[]
    user            user        @relation(fields: [userId], references: [id])
    reviews         Review[]
}
