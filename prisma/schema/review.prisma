model Review {
  id             String        @id @default(uuid())
  rating         Int           @default(0)
  comment        String?
  bookingId      String        @unique
  guideId        String
  guideSpotId    String
  travelerId     String
  guide          user          @relation("guideId", fields: [guideId], references: [id])
  traveler       user          @relation("travelerId", fields: [travelerId], references: [id])
  booking        Booking       @relation(fields: [bookingId], references: [id])
  guideSpot      GuideSpot?    @relation(fields: [guideSpotId], references: [id])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  guideProfile   guideProfile? @relation(fields: [guideProfileId], references: [id])
  guideProfileId String?
}
